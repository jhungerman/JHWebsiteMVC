@using JosephHungerman.Models.Work
@model JosephHungerman.Models.ViewModels.ResumeViewModel
@section Quotes {
    @await Html.PartialAsync("_QuotePartial", Model.Quote)
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container-fluid mt-2">
        <h2 class="text-center">@Model.Resume.Name<a id="editBtn" asp-action="EditResume"><span class="position-absolute end-0 me-3 text-black"><i class="fas fa-pencil fa-2xs"></i></span></a></h2>
    </div>
}
else
{
    <div class="container-fluid mt-2">
        <h2 class="text-center">@Model.Resume.Name</h2>
    </div>
}

<div id="divider-container">
    <hr class="hr-bold" />
    <div id="divider"></div>
    <hr class="hr-bold" />
</div>
<section class="container-fluid my-2 card p-0">
    <h3 class="text-center border-bottom card-header mb-1">Summary of Qualifications<span class="badge bg-warning position-absolute rounded-pill end-0 me-1" hidden id="summaryBadge">EDIT</span></h3>
    <div class="card-body">
        <p>@Model.Resume.Summary</p>
    </div>
</section>
<section class="container-fluid my-2 card p-0">
    <h3 class="text-center border-bottom card-header mb-1">Skills & Proficiencies</h3>
    <div class="card-body d-flex justify-content-around">
        @{
            var technical = Model.Resume.Skills.Where(s => s.SkillType == SkillType.Technical);
            var business = Model.Resume.Skills.Where(s => s.SkillType == SkillType.Business);
            var personal = Model.Resume.Skills.Where(s => s.SkillType == SkillType.Personal);
        }
        <div class="card border-0">
            <h6 class="card-header bg-white text-center">Technical</h6>
            <ul class="fa-ul card-body">
                @foreach (var skill in technical)
                {
                    <li><span class="fa-li"><i class="fas fa-code-branch fa-2xs"></i></span>@skill.Name</li>
                }
            </ul>
        </div>
        <div class="card border-0">
            <h6 class="card-header bg-white text-center">Business</h6>
            <ul class="fa-ul card-body">
                @foreach (var skill in business)
                {
                    <li><span class="fa-li"><i class="fas fa-gear fa-2xs"></i></span>@skill.Name</li>
                }
            </ul>
        </div>
        <div class="card border-0">
            <h6 class="card-header bg-white text-center">Personal</h6>
            <ul class="fa-ul card-body">
                @foreach (var skill in personal)
                {
                    <li><span class="fa-li"><i class="fas fa-user fa-2xs"></i></span>@skill.Name</li>
                }
            </ul>
        </div>
    </div>
</section>
<section class="container-fluid my-2 card p-0">
    <h3 class="text-center border-bottom card-header mb-1">Employment</h3>
    @foreach (var employment in Model.Resume.WorkExperiences)
    {
        var startDate = @employment.StartDate.ToString("MM/yyyy");
        var endDate = @employment.EndDate == null ? "" : @employment.EndDate.Value.ToString("MM/yyyy");
        <div class="row d-flex justify-content-between px-1">
            <div class="d-flex col-6 flex-grow-1">
                @if (employment.CompanyUrl == string.Empty)
                {
                    <h6 class="col-5"><strong>@employment.CompanyName</strong></h6>
                }
                else
                {
                    <h6 class="col-5"><strong><a href="https://@employment.CompanyUrl" target="_blank" class="text-decoration-none">@employment.CompanyName</a></strong></h6>
                }
                <h6 class="col-7">@employment.CompanyCity, @employment.CompanyState</h6>
            </div>
            <h6 class="d-flex justify-content-start col-3">
                @startDate &#8211 @endDate
            </h6>
        </div>
        <h6 class="row px-1"><strong><em>@employment.Title</em></strong></h6>
        <ul class="fa-ul">
            @foreach (var detail in employment.WorkDetails)
            {
                <li><span class="fa-li"></span><i class="fas fa-diamond fa-2xs me-1"></i>@detail.Detail</li>
            }
        </ul>
    }
</section>
<section class="container-fluid my-2 card p-0">
    <h3 class="text-center border-bottom card-header mb-1">Education</h3>
    @foreach (var school in Model.Resume.Educations)
    {
        var date = @school.EndDate.ToString("MM/yyyy");
        <div class="row d-flex justify-content-between px-1">
            <div class="d-flex col-6 flex-grow-1">
                @if (school.InstitutionUrl == string.Empty)
                {
                    <h6 class="col-5"><strong>@school.InstitutionName</strong></h6>
                }
                else
                {
                    <h6 class="col-5"><strong><a href="https://@school.InstitutionUrl" target="_blank" class="text-decoration-none">@school.InstitutionName</a></strong></h6>
                }
                <h6 class="col-7">@school.Credential</h6>
            </div>
            <h6 class="d-flex justify-content-start col-3">
                @date
            </h6>
        </div>
    }
</section>
<section class="container-fluid my-2 card p-0">
    <h3 class="text-center border-bottom card-header mb-1">Certifications</h3>
    @foreach (var cert in Model.Resume.Certifications)
    {
        var date = @cert.StartDate.ToString("MM/yyyy");
        <div class="row d-flex justify-content-between px-1">
            <div class="d-flex col-6 flex-grow-1">
                @if (cert.SourceUrl == string.Empty)
                {
                    <h6 class="col-5"><strong>@cert.Source</strong></h6>
                }
                else
                {
                    <h6 class="col-5"><strong><a href="https://@cert.SourceUrl" target="_blank" class="text-decoration-none">@cert.Source</a></strong></h6>
                }
                <h6 class="flex-grow-1 col-2">@cert.Subject</h6>
                @if (string.IsNullOrEmpty(cert.CredentialId))
                {
                    <h6 class="col-2">@cert.CredentialId</h6>
                }
                else
                {
                    <h6 id="credentialLabel" class="col-2"><span class="me-1">Id:</span>@cert.CredentialId</h6>
                }
            </div>
            <h6 class="d-flex justify-content-start col-3">
                @date
            </h6>
        </div>
    }
</section>
