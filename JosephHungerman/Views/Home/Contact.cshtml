@model Message
@{
}
<h1>I'd Love to Hear from You!</h1>
<form method="post">
    <div class="mb-3 row">
        <label class="col-form-label">Name*:</label>
        <div class="col-6">
            <input class="form-control col-6" asp-for="FirstName" />
            <div class="form-text">First Name</div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-6">
            <input class="form-control col-6" asp-for="LastName" />
            <div class="form-text">Last Name</div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label class="col-form-label">Email Address*:</label>
        <input type="email" class="form-control" asp-for="Email" />
        <div class="form-text">I will not share your email with anyone</div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label">Subject*:</label>
        <input class="form-control" asp-for="Subject" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="col-form-label">Message*:</label>
        <textarea class="form-control" asp-for="Detail"></textarea>
        <span asp-validation-for="Detail" class="text-danger"></span>
    </div>
    <div class="container d-flex justify-content-end p-0">
        <button type="submit" class="btn btn-primary" asp-controller="Contact" asp-action="SendMessage">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}